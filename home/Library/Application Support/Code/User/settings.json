            "terminal.ansiGreen": "#65A926",
            "terminal.ansiMagenta": "#B056AD",
            "terminal.ansiRed": "#C42251",
            "terminal.ansiWhite": "#C4BDB5",
            "terminal.ansiYellow": "#E2B651",
            "terminal.ansiBrightBlack": "#5D5D6F",
            "terminal.ansiBrightBlue": "#87CEFA",
            "terminal.ansiBrightCyan": "#8EB7AE",
            "terminal.ansiBrightGreen": "#A2BC4D",
            "terminal.ansiBrightMagenta": "#DA70D6",
            "terminal.ansiBrightRed": "#C4586A",
            "terminal.ansiBrightWhite": "#EAE7E4",
            "terminal.ansiBrightYellow": "#F3CD03"
        },
        "activityBarBadge.background": "#616161",
        "activityBar.activeBorder": "#616161",
        "list.activeSelectionForeground": "#616161",
        "list.inactiveSelectionForeground": "#616161",
        "list.highlightForeground": "#616161",
        "scrollbarSlider.activeBackground": "#61616150",
        "editorSuggestWidget.highlightForeground": "#616161",
        "textLink.foreground": "#616161",
        "progressBar.background": "#616161",
        "pickerGroup.foreground": "#616161",
        "tab.activeBorder": "#616161",
        "notificationLink.foreground": "#616161",
        "editorWidget.resizeBorder": "#616161",
        "editorWidget.border": "#616161",
        "settings.modifiedItemIndicator": "#616161",
        "settings.headerForeground": "#616161",
        "panelTitle.activeBorder": "#616161",
        "breadcrumb.activeSelectionForeground": "#616161",
        "menu.selectionForeground": "#616161",
        "menubar.selectionForeground": "#616161",
        "editor.findMatchBorder": "#616161",
        "selection.background": "#61616140",
        "statusBarItem.remoteBackground": "#616161"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment, comment.line.double-slash",
                "settings": {
                    "fontStyle": "italic"
                }
            },
        ],
        "[Spacemacs - light]": {
            "comments": "#969896"
            // "comments": "#c5c8c6"
        },

        "[Pop N' Lock Theme by Luxcium ✨]": {
            "textMateRules": [
                // Make JS comments look like others
                {
                    "scope": "comment.line.double-slash, source.css comment.block",
                    "settings": {
                        "foreground": "#666677"
                    }
                },
                {
                    "scope": "comment.line.double-slash punctuation.definition.comment, comment.block punctuation.definition.comment.begin, comment.block punctuation.definition.comment.end",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#506899"
                    }
                },

                // Style symbols
                {
                    "scope": "constant.language.symbol",
                    "settings": {
                        "foreground": "#55BBEE"
                    }
                },
                {
                    "scope": "constant.language.symbol punctuation.definition.constant",
                    "settings": {
                        "foreground": "#55BBEE88",
                        "fontStyle": "bold"
                    }
                },


                // Style  Markdown Headings
                {
                    "scope": "punctuation.definition.heading.markdown",
                    "settings": {
                        "fontStyle": "italic",
                        "foreground": "#506899"
                    }
                },
                {
                    "scope": "entity.name.section.markdown",
                    "settings": {
                        "fontStyle": "italic underline",
                        "foreground": "#B056AD"
                    }
                },
                {
                    "scope": "heading.1.markdown entity.name.section.markdown",
                    "settings": {
                        "fontStyle": "italic bold underline",
                    }
                },

                // Style true/false/nil
                {
                    "scope": "constant.language.boolean",
                    "settings": {
                        "fontStyle": "bold italic"
                    }
                },
                {
                    "scope": "constant.language.nil",
                    "settings": {
                        "foreground": "#EE6677CC",
                        "fontStyle": "bold italic"
                    }
                }
            ]
        }
    },
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "window.zoomLevel": 0,
    "editor.rulers": [

        {
            "column": 80,
            "color": "#4AE3"
        },
        {
            "column": 120,
            "color": "#FA04"
        },
        {
            "column": 121,
            "color": "#FA08"
        },
    ],
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "300",
    // "better-comments.multilineComments": true,
    // "gitlens.codeLens.enabled": false,
    // "gitlens.currentLine.enabled": false
    "ruby.useBundler": true, //run non-lint commands with bundle exec
    "ruby.useLanguageServer": true, // use the internal language server (see below)
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.colorTheme": "Chinolor Light",
    "workbench.iconTheme": "material-icon-theme",

    "todohighlight.isEnable": true,

    // these are set up for Pop Lux
    "todohighlight.defaultStyle": {
        // "color": "#2C203C",
        // "backgroundColor": "#5D5D6F",

        // chinolor
        "color": "#f8f4ed",
        "backgroundColor": "#8a988e",
        "fontStyle": "normal",
        "fontWeight": "bold"
    },
    "todohighlight.keywords": [
        {
            "text": "TODO",
            // "backgroundColor": "#65A926" // poplux
            "backgroundColor": "#41ae3c" // chinolor
        },
        {
            "text": "HACK",
            // "backgroundColor": "#C4586A" // poplux
            "backgroundColor": "#ee3f4d" // chinolor
        },
        {
            "text": "FIXME",
            // "backgroundColor": "#D2811A" // poplux
            "backgroundColor": "#fc7930" // chinolor
        },
        {
            "text": "NOTE",
            // "backgroundColor": "#E2B651" // poplux
            "backgroundColor": "#f8e8c1", // chinolor
            "color": "#f8b37f"
        },
        {
            "text": "OPTIMIZE",
            // "backgroundColor": "#3C9C85" // poplux
            "backgroundColor": "#12aa9c" // chinolor
        },
        {
            "text": "QUESTION",
            // "backgroundColor": "#528FC6" // poplux
            "backgroundColor": "#619ac3" // chinolor
        },
        {
            "text": "IDEA",
            // "backgroundColor": "#B056AD" // poplux
            "backgroundColor": "#cc5595" // chinolor
        },
        "XXX"
    ],

    "diffEditor.ignoreTrimWhitespace": false,
    "git.autofetch": true,
    "githubPullRequests.queries": [

        {
            "label": "Waiting For My Review",
            "query": "is:open review-requested:${user}"
        },
        {
            "label": "Needs Review",
            "query": "is:open review:required -author:${user}"
        },
        {
            "label": "Created By Me",
            "query": "is:open author:${user}"
        },
        {
            "label": "Approved",
            "query": "is:open review:approved"
        }
    ],
    "editor.tabSize": 2,
    "scm.inputFontFamily": "editor",
    "materialTheme.accent": "Graphite",
    "files.insertFinalNewline": true,
    "colorize.languages": [
        "css",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg",
        "markdown"
    ]
